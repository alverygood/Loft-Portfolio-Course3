extends ../main.layout.pug

block variables
  - var title = 'Обо мне'

block scripts
  script(src='about.bundle.js')

block content
    section.welcome
        button.welcome__btn Авторизация

        .welcome__data
            .user.welcome__user
                .welcome__user-pic
                    img(src="assets/images/sections/hero/men.png", alt="handsome-men").user__pic-img
            .welcome__user-description
                .welcome__user-name Владимир Астахов
                .welcome__user-info Личный сайт веб разрабочика
            .welcome__socials
                ul.socials__list
                    each item in ['vk', 'github', 'in']
                        li.socials__item
                            a(href="#").socials__link
                                +icon(item, 'welcome__socials__link-icon')
            nav.welcome__menu
                ul.menu__list
                    each item in ['Мои работы', "Обо мне", "Блог", "Авторизация"]
                        li.menu__item
                            a(href="").menu__link #{item}